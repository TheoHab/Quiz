{% extends 'base.html.twig' %}

{% block title %}Categorie index
{% endblock %}

{% block body %}

	{% if is_granted('ROLE_ADMIN') %}
		<table class="tableIndex table table-hover table-dark" style="width: 80%;">
			<thead>
				<tr>
					<th scope='col'>Name</th>
					<th scope='col'>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for categorie in categories %}
					<label for="show">
						<tr>
							<td>{{categorie.name}}</td>
							<td>
								<a id='show' class="text-primary" href="{{ path('app_categorie_show', {'id': categorie.id}) }}">show</a>
								<a class="text-primary" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">edit</a>
							</td>
						</tr>
					</label>
				{% endfor %}
			</tbody>
		</table>
	{% else %}
		<table class="tableIndex table table-hover table-dark" style="width: 30%; margin-top: 5%; margin-left: 35%">
			<thead>
				<tr>
					<th scope='col'>Name</th>
				</tr>
			</thead>
			<tbody>
				{% for categorie in categories %}
					<label for="show">
						<tr>
							<td>{{categorie.name}}</td>
						</tr>
					</label>
				{% endfor %}
			</tbody>
		</table>
	{% endif %}
{% endblock %}
