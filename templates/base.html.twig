	{% block body %}{% endblock %}
	{% if is_granted('ROLE_USER') %}
		<body>
			<header>
				<nav>
					<input type="checkbox" id="toggle" name="toggle">
					<div class="navbar">
						<label id='Ftoggle' class="Ftoggle" for="toggle">
							<i class="fa fa-bars"><img id="logoP" src="/assets/images/trivial.png" alt="QuizLogo"/></i>
						</label>
						<div id="navHome">
							<label for='home'>
								<img class="navLogo" src="/assets/images/homepage.png" alt="button acceuil"/>
							</label>
							<a name="home" id="home" href="{{path('app_home')}}">Acceuil</a>
						</div>
						<div id="navProfil">
							<label for='profil'>
								<img class="navLogo" src="/assets/images/profile.png" alt="button profile"/>
							</label>
							<a name="profil" id="profil" href="{{path('app_user_index')}}">Profile</a>
						</div>
						<div id="navAdd">
							<label for='addQuiz'>
								<img class="navLogo" src="/assets/images/add-button.png" alt="button add Quiz"/>
							</label>
							<a name="profil" id="profil" href="{{path('app_categorie_new')}}">Ajoutez un quiz</a>
						</div>

					</div>
					<div class="navVignette">
						<div class="decoInscri">
							<a class="co" href="{{ path('app_logout') }}">Déconnexion</a>
						</div>
					</div>
					<div class="round"></div>
				</nav>
			</header>
		</body>
		<footer>
			<p>Site crée par: Thibaut.B, Romain.H, Jacques.K, Théo.H</p>
		</footer>
	</html>
