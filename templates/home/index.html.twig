{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="d-block" style='margin-top: 10%; margin-left: 5%;'>
		<h1>Bienvenue sur my_Quiz !</h1>
		<p>Selectionnez une catégorie pour démarrer le quiz :</p>
		<table class="tableCategorie table table-hover table-dark">
			<tbody>
				{% for categorie  in categories %}
						<div style="width: 500px; margin: auto; display: block;">
							<a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-dark p-2" style="font-size: 22px; height: 50px; width: 500px; border-radius: inherit;" role="button">{{ categorie.name }}</a>
						</div>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
